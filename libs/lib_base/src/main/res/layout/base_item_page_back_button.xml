<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="@color/c_blue_2"
    android:paddingTop="@dimen/dimen_margin_top_1"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginBottom="@dimen/dimen_margin_top_1"
        android:layout_marginLeft="@dimen/dimen_margin_left_1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/appItemPageBack"
            android:layout_width="@dimen/dimen_size_pic"
            android:layout_height="@dimen/dimen_size_pic"
            android:background="@drawable/base_button_return_selector" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/appItemPageBackTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_margin_top_1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appItemPageBackIVLeft"
            android:layout_width="@dimen/dimen_size_1"
            android:layout_height="@dimen/dimen_size_1"
            android:src="@drawable/base_ic_title_left_side" />

        <TextView
            android:id="@+id/appItemPageBackTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/base_text_recreation"
            android:textColor="@color/white"
            android:textSize="42dp" />

        <ImageView
            android:id="@+id/appItemPageBackIVRight"
            android:layout_width="@dimen/dimen_size_1"
            android:layout_height="@dimen/dimen_size_1"
            android:src="@drawable/base_ic_title_right_side" />
    </LinearLayout>



</FrameLayout>





