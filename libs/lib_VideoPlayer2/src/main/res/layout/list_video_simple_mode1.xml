<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llListVideoContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:paddingTop="@dimen/dimen_15"
    android:paddingRight="15dp"
    android:paddingBottom="@dimen/dimen_15"
    android:paddingLeft="15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/listVideoSimpleTVNum"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:text="1"
        android:textSize="35dp" />


    <com.tecsun.jc.base.widget.corner.RoundCornerFrameLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:clickable="false"
        android:orientation="vertical"
        app:roundBottomLeft="true"
        android:paddingRight="20dp"
        app:roundBottomRight="true"
        app:roundTopLeft="true"
        app:roundTopRight="true"
        app:roundedCornerRadius="10dp">

        <com.tecsun.lib_videoplayer2.SampleCoverVideo
            android:id="@+id/video_item_player"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="match_parent" />
    </com.tecsun.jc.base.widget.corner.RoundCornerFrameLayout>




    <TextView
        android:id="@+id/listVideoModeTV"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center|left"
        android:lines="2"
        android:paddingLeft="20dp"
        tools:text="01社保萌萌答-社会保险不等于商业保险"
        android:textColor="@android:color/black"
        android:textSize="23dp" />

</LinearLayout>