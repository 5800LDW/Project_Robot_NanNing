<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="1200px"
        android:layout_height="800px"
        android:background="@drawable/app_shape_rectangle_white_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/c_blue_2"
                android:text="请在窗口关闭前使用广西人社APP扫描二维码登录 ">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="@dimen/dimen_5"
            android:layout_centerVertical="true"
            android:textColor="@color/c_red_1"
            android:text="">
        </TextView>

        <WebView
            android:id="@+id/webview"
            android:layout_width="500px"
            android:layout_height="400px"
            android:layout_marginTop="30px"
            ></WebView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="50px">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="250px"
                android:layout_height="100px"
                android:background="@mipmap/btn_shouye"
                android:visibility="gone"
                android:textSize="22sp"
                android:textColor="#fff"
                android:text="返回">

            </Button>

            <Button
                android:id="@+id/btn_close"
                android:layout_width="300px"
                android:layout_height="100px"
                android:textColor="#fff"
                android:textSize="22sp"
                android:background="@mipmap/btn_fanhui"
                android:text="关闭">

            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>